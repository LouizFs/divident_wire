<div class="row">
  <div class="col-md-12 mb-4">
    <!-- Basic Table -->
    <div class="card h-auto d2c_projects_datatable">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h6><%= type %></h6>
        <div >
          <%= link_to 'New', send("new_#{type.downcase}_path"), class: 'btn btn-secondary' %>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table" id="d2c_advanced_table">
            <thead>
              <tr>
                <% if with_checks %>
                  <th>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox">
                    </div>
                  </th>
                <% end %>
                <%- keys.each do |key| %>
                  <th style="min-width: 170px;"><%= key %></th>
                <% end %>
                <th style="min-width: 170px"> Actions </th>
              </tr>
            </thead>
            <tbody>
              <%- elements.each_with_index do |element|%>
                <tr>
                  <%- if with_checks %>
                    <td>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                      </div>
                    </td>
                  <% end %>
                  <%- keys.each_with_index do |key, index|%>
                    <td><%= element.send(key)%></td>
                  <% end%>
                  <% if actions %>
                    <td>
                      <%= link_to 'Delete', send("#{element.class.name.downcase}_path", element), data: { "turbo-method": :delete } %> |
                      <%= link_to 'Edit', send("edit_#{element.class.name.downcase}_path", element)%> |
                      <%= link_to 'Show', send("#{element.class.name.downcase}_path", element)%>
                    </td>
                  <%end%>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- End:Advanced Table -->
  </div>
</div>