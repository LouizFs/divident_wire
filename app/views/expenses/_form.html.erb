<%= dw_card :expense do %>
  <%= form_for @expense do |form|%>
    <div class="row">
      <div class="col-md-6 col-xl-4">
        <div class="mb-4">
          <%= form.label :name, class: 'form-label'%>
          <%= form.text_field :name, class: 'form-control', placeholder: 'name'%>
        </div>
      </div>
      <div class="col-md-6 col-xl-4">
        <div class="mb-4">
          <%= form.label :amount, class: 'form-label' %>
          <%= form.text_field :amount, class: 'form-control', placeholder: 'amount' %>
        </div>
      </div>
      <div class="col-md-6 col-xl-4">
        <div class="mb-4 position-relative">
          <%= form.label :category_id, class: 'form-label'%>
          <%= form.select :category_id, options_for_select(@categories.map {|category| [category.name, category.id]}), {}, class: "form-select form-control"%>
        </div>
      </div>
      <div class="col-md-6 col-xl-4">
        <div class="mb-4">
          <%= form.label :description, class: 'form-label'%>
          <%= form.text_area :description, class: 'form-control', placeholder: 'description'%>
        </div>
      </div>
    </div>
    <div>
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
<%end%>