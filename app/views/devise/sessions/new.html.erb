<div class="text-center mb-4">
  <h4 class="text-capitalize">Welcome DividendWire</h4>
  <p class="text-muted">Don't have an account? <%= link_to 'Sign up here', new_user_registration_path, class: 'text-capitalize text-primary text-decoration-none d2c_link' %>
  </p>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-validation"}) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class: "form-label"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="row mb-3">
      <div class="col">
        <%= f.check_box :remember_me, class:"form-check-input" %>
        <%= f.label :remember_me, class:"form-check-label text-muted" %>
      </div>
    </div>
  <% end %>
  <div class="mb-3">
    <%= f.submit "Log in", class: "btn btn-primary w-100 text-capitalize" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
