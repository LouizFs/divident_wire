<%= dw_card do %>
  <%= form_for @category do |form|%>
    <div class="row">
      <div class="col-md-6 col-xl-4">
        <div class="mb-4">
          <%= form.label :name, class: 'form-label'%>
          <%= form.text_field :name, class: 'form-control', placeholder: 'name'%>
        </div>
      </div>
      <div class="col-md-6 col-xl-4">
        <div class="mb-4 position-relative">
          <%= form.label :kind, class: 'form-label'%>
          <%= form.select :kind, options_for_select(Category.kinds.keys.map {|key| [key.humanize, key]}), {}, class: "form-select form-control"%>
        </div>
      </div>
    </div>
    <div>
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
<%end%>